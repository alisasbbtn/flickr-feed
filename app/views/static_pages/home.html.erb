<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>

<% unless @user_profile.nil? || @photos.nil? %>
<div class="container-fluid flickr text-center">
  <h2>Recent photos from <%= link_to @user_name, @user_profile %></h2>
  <%= render 'photos', photos: @photos.in_groups_of(5) %>
</div>

<% end %>
